<h1>Sign Up</h1>


<%= form_for(@user, url: action_path(:signup, @user), remote: true) do |f| %>

  <%= f.field_for(:email) do %>
    <% f.email_field :email, autocomplete: "email", placeholder: "Email" %>
  <% end %>

  <%= f.field_for(:password) do %>
    <% f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  <% end %>

  <%= f.field_for(:password_confirmation) do %>
    <% f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
  <% end %>

  <%= f.submit "Sign up" %>
<% end %>

<%= render_prop :oauth_links %>

<div class="card-action">
  Already have an account? <%= link_to "Login", "#", class: "show-login-tab" %>
</div>
