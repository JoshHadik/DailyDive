<div class="flex-container">
  <div class="journal flex-content">
    <%= link_to "#", class: "settings", data: { action: "showCard", "card-tag": "settings" } do %>
      <%= image_tag(asset_path('settings')) %>
    <% end %>

    <h1 class="h1-like journal-title">
      <%= dynamic_text_for(current_journal, :title) %>
    </h1>

    <p class="journal-caption">
      <%= dynamic_text_for(current_journal, :caption, placeholder: "Enter a caption for your journal...") %>
    </p>

    <div class="actions">
      <%= link_to "#", class: "icon-button dull", data: { action: "showCard", "card-tag": "history" } do %>
        <div class="icon-button--image">
          <img src="<%= asset_path('history') %>" />
        </div>
        <div class="icon-button--text">
          History
        </div>
      <% end %>

      <%= link_to scene_path(:active_journal),
          class: "icon-button large" do %>
        <div class="icon-button--image">
          <img src="<%= asset_path('pencil') %>" />
        </div>
        <div class="icon-button--text">
          Start
        </div>
      <% end %>

      <%= link_to "#", class: "icon-button dull", data: { action: "showCard", "card-tag": "questions" } do %>
        <div class="icon-button--image">
          <img src="<%= asset_path('question') %>" />
        </div>
        <div class="icon-button--text">
          Questions
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="popup-cards">
  <%= render_prop :card, :questions_card %>
  <%= render_prop :card, :history_card %>
  <%= render_prop :card, :settings_card %>
</div>
